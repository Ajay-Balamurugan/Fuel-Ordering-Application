<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="323dp"
        android:layout_height="87dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addtocart"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/violet_button"
                android:elevation="5dp"
                android:fontFamily="@font/nexa_trial_regular"
                android:gravity="center"
                android:text="Add To Cart"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/menuFuelPrice"
                app:layout_constraintStart_toStartOf="@+id/menuFuelPrice"
                app:layout_constraintTop_toBottomOf="@+id/menuFuelPrice" />

            <TextView
                android:id="@+id/menuFuelPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nexa_trial_bold"
                android:text="â‚¹X per Litre"
                android:textColor="#168118"
                app:layout_constraintStart_toEndOf="@+id/menuFuelImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menuFuelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/nexa_trial_bold"
                android:text="Fuel Name"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/menuFuelImage"
                app:layout_constraintStart_toEndOf="@+id/menuFuelImage"
                app:layout_constraintTop_toTopOf="@+id/menuFuelImage" />

            <ImageView
                android:id="@+id/menuFuelImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="28dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>